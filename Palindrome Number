class Solution {
    public boolean isPalindrome(int x) {

        
        if (x < 0 || (x % 10 == 0 && x != 0)) {
            return false;
        }

        int y = 0;

        
        while (x > y) {
            int digit = x % 10;
            y = y * 10 + digit;
            x = x / 10;
        }

        
        return (x == y) || (x == y / 10);
    }
}
